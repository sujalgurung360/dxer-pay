# ===========================================
# DXER Environment Variables
# ===========================================
# Copy this file to .env and fill in values

# Supabase
NEXT_PUBLIC_SUPABASE_URL=http://localhost:54321
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
DATABASE_URL=postgresql://postgres:postgres@localhost:54322/postgres

# API
API_PORT=4000
API_URL=http://localhost:4000
NEXT_PUBLIC_API_URL=http://localhost:4000

# JWT (Supabase JWT secret for verification)
SUPABASE_JWT_SECRET=your-jwt-secret

# ── AI (OpenAI for OCR, categorization, summaries, NL query) ──
OPENAI_API_KEY=sk-your-openai-api-key
ENABLE_AI_ANOMALY_DETECTION=false  # Set to 'true' for AI-enhanced anomaly detection
ENABLE_AI_MONTH_END=false  # Set to 'true' for AI-enhanced month-end checks

# File Storage
SUPABASE_STORAGE_BUCKET=receipts

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=debug
NODE_ENV=development

# ── Multichain (Private Blockchain) ──
MULTICHAIN_RPC_HOST=127.0.0.1
MULTICHAIN_RPC_PORT=4798
MULTICHAIN_RPC_USER=multichainrpc
MULTICHAIN_RPC_PASSWORD=your-rpc-password
MULTICHAIN_CHAIN_NAME=dxerchain
MULTICHAIN_STREAM_NAME=dxer-anchors

# ── Polygon (Public Blockchain) ──
POLYGON_NETWORK=amoy
POLYGON_CHAIN_ID=80002
POLYGON_RPC_URL=https://rpc-amoy.polygon.technology
POLYGON_PRIVATE_KEY=your-wallet-private-key
POLYGON_WALLET_ADDRESS=0xYourWalletAddress
POLYGON_EXPLORER_URL=https://amoy.polygonscan.com
