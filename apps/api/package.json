{
  "name": "@dxer/api",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "postinstall": "prisma generate",
    "dev": "tsx watch --env-file=.env src/index.ts",
    "build": "prisma generate && tsc && npm run build:serverless",
    "build:serverless": "esbuild api/index.ts --bundle --platform=node --format=esm --outfile=api/index.js --external:@prisma/client --external:prisma --alias:@dxer/shared=../../packages/shared/src/index.ts",
    "start": "node dist/index.js",
    "lint": "tsc --noEmit",
    "test": "vitest run --passWithNoTests",
    "test:ci": "vitest run --reporter=verbose --passWithNoTests",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "seed": "tsx src/scripts/seed.ts"
  },
  "dependencies": {
    "@dxer/shared": "*",
    "@prisma/client": "^6.1.0",
    "@supabase/supabase-js": "^2.47.0",
    "archiver": "^7.0.1",
    "cors": "^2.8.5",
    "ethers": "^6.16.0",
    "express": "^4.21.0",
    "express-rate-limit": "^7.4.0",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.2.2",
    "nodemailer": "^8.0.1",
    "openai": "^6.22.0",
    "pino": "^9.5.0",
    "pino-pretty": "^11.3.0",
    "prisma": "^6.1.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/nodemailer": "^7.0.9",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.7",
    "esbuild": "^0.27.3",
    "pg": "^8.18.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^4.0.18"
  }
}
